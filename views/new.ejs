<%- include("./include/head.ejs") %>
<title>New Post</title>
</head>
<body>
    <form action="/listing" method="POST">
        <div class="new-post">
            <div class="new-box">
                <label for="new-title">Title : </label>
                <input type="text" name="title" id="new-title" placeholder="Enter a Hotel Name">
            </div>
            <div class="new-box">
                <label for="new-price">Price : </label>
                <input type="number" name="price" id="new-price" placeholder="Enter Price" value="5000">
            </div>
            <div class="new-box">
                <label for="new-dec">Descriptions : </label>
                <input type="text" name="description" id="new-dec" placeholder="Enter Any Description">
            </div>
            <div class="new-box">
                <label for="new-loc">Location : </label>
                <input type="text" name="location" id="new-loc" placeholder="Enter Location">
            </div>
            <div class="new-box">
                <label for="new-con">Country : </label>
                <input type="text" name="country" id="new-con" placeholder="Enter Country">
            </div>
                <button class="sub-btn">Submit</button>
            </form>
    </div>
<%- include("./include/footer.ejs") %>

</body>
</html>